#Define system
units			metal
dimension		3
atom_style      	atomic
boundary        	p p p
neigh_modify		delay 0 every 1

#Define geometry 
lattice 		sc 3.25

region 			box block 0 8 0 8 0 8 units lattice
region 			box2 block 0.5 7.5 0.5 7.5 0.5 7.5 units lattice
create_box		2 box

create_atoms		1 region box
create_atoms		2 region box2

#Potential
pair_style		meam/c
pair_coeff 		* * ../_Potentials/library.meam Ni Ti ../_Potentials/NiTi.meam Ni Ti
mass 			1 58.6934 # Ni
mass            2 47.867 # Ti

# Termodinamica

velocity        	all create 500.0 97287
fix			5 all npt temp 1200.0 1200.0 10.0 iso 1.0 1.0 100000.0 
fix 			4 all press/berendsen iso 1.0 1.0 1000.0

reset_timestep  	0

# Run

thermo_style		custom step temp press
thermo          	1000
thermo_modify 		lost ignore flush yes

shell mkdir dump
dump			1 all atom 1000 dump/*.dump
dump_modify     1 pad 5

timestep		0.01
run             	1


